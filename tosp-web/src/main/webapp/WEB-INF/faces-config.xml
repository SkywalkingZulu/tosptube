<?xml version="1.0"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
              http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
              version="2.2">  
  
    <lifecycle>       
        <phase-listener>
            com.web.jsf.handlers.AuthenticationPhaseListener
        </phase-listener>
    </lifecycle>
    <application>
      <state-manager>org.apache.myfaces.test.state.SaveSizeStateManagerWrapper</state-manager>
        
        <locale-config>
            <default-locale>en</default-locale>
        </locale-config>    
        <resource-bundle>
            <base-name>i18n</base-name>
            <var>i18n</var>        
        </resource-bundle>  
        <resource-bundle>
            <base-name>i18n</base-name>
            <var>i18n</var>        
        </resource-bundle>
        <resource-bundle>
            <base-name>access</base-name>
            <var>accessProp</var>
        </resource-bundle>
        <message-bundle>
            messages
        </message-bundle>      
    </application>
    <navigation-rule>
        <from-view-id>*</from-view-id>        
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>   
        <navigation-case>
            <from-outcome>profile</from-outcome>
            <to-view-id>/pages/profile.xhtml</to-view-id>
            <redirect/>
        </navigation-case>   
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/static/success.xhtml</to-view-id>
            <redirect/>
        </navigation-case>      
            <navigation-case>
            <from-outcome>videolist</from-outcome>
            <to-view-id>/pages/videolist.xhtml</to-view-id>
            <redirect/>
        </navigation-case>                
    </navigation-rule>    
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>viewExpired</from-outcome>
            <to-view-id>/error/error.xhtml</to-view-id>
            <redirect/>
        </navigation-case>       
    </navigation-rule>   
</faces-config>